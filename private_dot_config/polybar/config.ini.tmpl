[colors]

[bar/i3]
monitor = ${env:MONITOR:}
width = 100%
height = 24pt
radius = 0
bottom = true

background = #000000
foreground = {{ .color_gray_800 }}

line-size = 2pt

border-size = 0pt
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin = 2

font-0 = Liberation Mono:pixelsize=10;2
font-1 = feather:pixelsize=14;3

modules-left = xworkspaces
modules-right = wlan backlight pulseaudio battery date settings

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true
wm-restack = i3

[module/xworkspaces]
type = internal/xworkspaces
pin-workspaces = true

label-active = %name%
label-active-background = {{ .color_accent_200 }}
label-active-underline= {{ .color_accent_400 }}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = #AA3333
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = {{ .color_gray_400 }}
label-empty-padding = 1

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = "%{F#FFFFFF}%{F-} %percentage%%"
label-muted = "%{F#FFFFFF}%{F-} 0%"

[module/wlan]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = "%{F#FFFFFF}%{F-} %ifname%"
interface-type = wireless
label-connected = "%{F#FFFFFF}%{F-} %essid% %local_ip%"

[module/date]
type = internal/date
interval = 1

date = "%{F#FFFFFF}%{F-} %Y-%m-%d %H:%M:%S"
date-alt = "%{F#FFFFFF}%{F-} %Y-%m-%d %H:%M:%S"
label = %date%
label-foreground = ${colors.primary}

[module/backlight]
type = internal/backlight
card = intel_backlight
use-actual-brightness = true
enable-scroll = true
format = <label>
label = "%{F#FFFFFF}%{F-} %percentage%%"

[module/battery]
type = internal/battery
full-at = 99
low-at = 10
battery = BAT0
adapter = AC
format-charging = <label-charging>
format-discharging = <label-discharging>
format-low = <label-low>
label-charging = "%{F#FFFFFF}%{F-} %percentage%%"
label-discharging = "%{F#FFFFFF}%{F-} %percentage%%"
label-low = "%{F#FFFFFF}%{F-} %percentage%%"

[module/settings]
type = custom/script
exec = echo "%{F#FFFFFF}%{F-}"
click-left = "gnome-control-center"

[settings]
screenchange-reload = true
pseudo-transparency = true
