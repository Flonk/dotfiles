window:
  opacity: 0.5

font:
  normal:
    family: Hasklug Nerd Font Mono
    style: Regular
  bold:
    family: Hasklug Nerd Font Mono
    style: Bold
  italic:
    family: Hasklug Nerd Font Mono
    style: Italic
  size: 10

colors:
  primary:
    background: "{{ .nord_black }}"
    foreground: "{{ .nord_white }}"
  # # Colors the cursor will use if `custom_cursor_colors` is true
  cursor:
    text: "0x1d1f21"
    cursor: "0xc5c8c6"
  # # Normal colors
  normal:
    black: "0x1d1f21"
    red: "{{ .nord_red }}"
    green: "0xb5bd68"
    yellow: "{{ .nord_yellow }}"
    blue: "{{ .nord_glacier }}"
    magenta: "{{ .nord_purple }}"
    cyan: "{{ .nord_teal }}"
    white: "{{ .nord_darker_white }}"
  # # Bright colors
  bright:
    black: "0x969896"
    red: "{{ .nord_orange }}"
    green: "0x282a2e"
    yellow: "{{ .nord_dark_gray }}"
    blue: "0xb4b7b4"
    magenta: "0xe0e0e0"
    cyan: "0xa3685a"
    white: "0xffffff"
