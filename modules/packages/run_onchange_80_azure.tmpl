#! /bin/bash

cat << EOF

┏━┓╺━┓╻ ╻┏━┓┏━╸
┣━┫┏━┛┃ ┃┣┳┛┣╸
╹ ╹┗━╸┗━┛╹┗╸┗━╸
EOF

echo 'Checking if azure-cli is installed...'
if ! [ -x "$(command -v az)" ]; then
  echo 'Installing azure-cli...'
  curl -sL https://aka.ms/InstallAzureCLIDeb | sudo bash
fi

echo 'Checking if azure-functions-core-tools are installed...'
if ! [ -x "$(command -v func)" ]; then
  curl https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > microsoft.gpg
  sudo mv microsoft.gpg /etc/apt/trusted.gpg.d/microsoft.gpg

  sudo sh -c 'echo "deb [arch=amd64] https://packages.microsoft.com/repos/microsoft-ubuntu-$(lsb_release -cs 2>/dev/null)-prod $(lsb_release -cs 2>/dev/null) main" > /etc/apt/sources.list.d/dotnetdev.list'
  
  sudo nala update
  sudo nala install azure-functions-core-tools-4
fi

echo 'Checking if storage explorer is installed...'
if ! [ -x "$(command -v storage-explorer)" ]; then
  sudo snap install storage-explorer
  gnome-keyring-daemon --replace --components=pkcs11,secrets,ssh,gpg
  sudo apt install libsecret-tools
  secret-tool store --label='Default Keyring' key default
fi